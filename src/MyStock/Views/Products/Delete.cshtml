@model ProductViewModel

@{
    ViewData["Title"] = "Excluir - " + @Model.Name;
}


<h3>@ViewData["Title"]</h3>

<h4>Confirmar exclus√£o?</h4>
<hr />
<div class="row">

    <div class="col-md-4">
        <img src="/images/@Model.Image" id="imgSrc" class="img-thumbnail"/>
    </div>
    <div class="col-md-8">
        <dl>
            <dt class = "col-sm-2">
                Fornecedor
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Provider.Name)
            </dd>
            <dt class = "col-sm-2">
            Categoria
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Value)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Value)
            </dd>
            <dt class = "col-sm-10">
                @Html.DisplayNameFor(model => model.Register)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Register)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Active)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Active)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input asp-for="Id" hidden>
            <div class="col-sm-10">
                <button class="btn btn-danger">Excluir</button>
                <a href="javascript:window.history.back()" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>


