@model ProductViewModel

@{
    ViewData["Title"] = "Novo Produto";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create" enctype="multipart/form-data">
            <vc:summary-errors></vc:summary-errors>

            <partial name="_Product" />
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="ProviderId" class="control-label"></label>
                    <select asp-for="ProviderId" class="custom-select" asp-items="@(new SelectList(Model.Providers, "Id", "Name"))"></select>
                    <span asp-validation-for="ProviderId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="custom-select" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2 text-center">
                    <label asp-for="Active" class="control-label" style="color:white"></label>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a class="btn btn-info" href="javascript:window.history.back()">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {															
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js" integrity="sha256-Kg2zTcFO9LXOc7IwcBx1YeUBJmekycsnTsq2RuFHSZU=" crossorigin="anonymous"></script>
    <script>
        $(function () {
            $('#money').mask("#.##0,00", {reverse: true});
        });
    </script>
}